#!/bin/bash

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias cp='cp -i'
alias mv='mv -i'
alias fzf='fzf --info=inline-right'

alias gif='git fetch'
alias gis='git status'
alias gil='git log --graph --pretty=tformat:"%C(auto)%h %C(blue)%ci %C(cyan)%cn %C(reset)%s"'
alias gid='git diff'
alias gia='git add'
alias gir='git restore'
alias girs='git restore --staged'
alias gicv='git commit -v'

alias s='sudo'
alias sr='sudo !!'
alias n='nvim'
alias sn='sudo -E nvim'
alias j='jump'

if command -v yazi-patch &> /dev/null; then
    alias y='yazi-patch'
else
    alias y='yazi'
fi
